# Environment Variables for Turkish Learning App
# Copy this file to .env for local development

# JWT Secret - Use a strong, random string for production
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-please-change-this

# Google OAuth Client ID
# Get this from Google Cloud Console: https://console.cloud.google.com/
# Format: XXXXXXXXXXXX-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-mysql-password
DB_NAME=turkish_learning_app
DB_CONNECTION_LIMIT=10

# App Configuration
NODE_ENV=development
PORT=5173

# Other API Keys (add as needed)
# OPENAI_API_KEY=your-openai-api-key
# STRIPE_SECRET_KEY=your-stripe-secret-key